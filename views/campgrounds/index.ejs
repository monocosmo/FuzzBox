<% include ../partials/header %>
<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome To FuzzBox!</h1>
            <p>Share your thoughts on electric guitars, pedals and all other rock music instruments. Let's ROCK!</p>
            <hr>
            <a class="pull-right" href="/campgrounds/new">
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                  Share New Gear
            </a>
        </div>
    </header>
    
    <div class="row">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img id="index-img" src="<%= campground.image%>">
                    <hr>
                    <div class="caption">
                        <h4><%= campground.name %></h4>
                    </div>
                    <hr>
                    <p class="text-center">
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-default">View Details</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>
    
    <div class="row text-center">
        <% if (pages && pages > 0) { %>
        <ul class="pagination text-center">
            <% if (current == 1) { %>
            <li class="disabled"><a>First</a></li>
            <% } else { %>
            <li><a href="/campgrounds">First</a></li>
            <% } %>
     
            <% if (current == 1) { %>
            <li class="disabled"><a>«</a></li>
            <% } else { %>
            <li><a href="/campgrounds?page=<%= Number(current) - 1 %>">«</a></li>
            <% } %>
     
            <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
            <% if (i !== 1) { %>
            <li class="disabled"><a>...</a></li>
            <% } %>
            <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
            <% if (i == current) { %>
            <li class="active"><a><%= i %></a></li>
            <% } else { %>
            <li><a href="/campgrounds?page=<%= i %>"><%= i %></a></li>
            <% } %>
            <% if (i == Number(current) + 4 && i < pages) { %>
            <li class="disabled"><a>...</a></li>
            <% } %>
            <% } %>
     
            <% if (current == pages) { %>
            <li class="disabled"><a>»</a></li>
            <% } else { %>
            <li><a href="/campgrounds?page=<%= Number(current) + 1 %>">»</a></li>
            <% } %>
     
            <% if (current == pages) { %>
            <li class="disabled"><a>Last</a></li>
            <% } else { %>
            <li><a href="/campgrounds?page=<%= pages %>">Last</a></li>
            <% } %>
        </ul>
        <% } %>
    </div>

</div>

<% include ../partials/footer %>